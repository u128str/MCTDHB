# .bash_profile

# Get the aliases and functions
if [ -f ~/.bashrc ]; then
. ~/.bashrc
fi
. /etc/bashrc
# User specific environment and startup programs
. /common/intel/composerxe/mkl/bin/mklvars.sh intel64
export MPIR_HOME=/usr/mpi/pgi/openmpi-1.4.2-qlc
export MPIRUN_CMD=/common/runmvs/bin/run-openmpi
PATH=/common/cuda/bin:/common/runmvs/bin:/common/pgi/linux86-64/2011/bin:$MPIR_HOME/bin:$HOME/bin:$PATH
export PATH
export LC_ALL=ru_RU.utf8
export LANG=$LC_ALL



